<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grad"
    tools:context=".fragments.EventInfoFragment">

    <TextView
        android:id="@+id/eventInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_semibold"
        android:paddingLeft="15dp"
        android:text="Last name of the family"
        android:textColor="@color/mhLightColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eventInfoImage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/eventInfoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/mhDarkColor"
        android:src="@mipmap/arni" />

    <RelativeLayout
        android:id="@+id/infoLayout"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@color/bg_menu_color"
        app:layout_constraintStart_toStartOf="@id/eventInfoImage"
        app:layout_constraintBottom_toBottomOf="@+id/eventInfoImage">

        <TextView
            android:id="@+id/eventInfoHoliday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_title"
            android:fontFamily="@font/raleway_medium"
            android:padding="15dp"
            android:text="Shabbat"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/eventInfoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/holiday"
            android:fontFamily="@font/raleway_medium"
            android:paddingLeft="15dp"
            android:text="22.05.90"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="350dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/infoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="
            vdsl;kfl;dksfkldskf
            ;dlsfdsl;fk;ldksl;fk;dls
            df;lmdsfl;kdskl;dkfkdsl"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </ScrollView>

    <Button
        android:id="@+id/joinFamilyBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Join to family"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"/>




</android.support.constraint.ConstraintLayout>