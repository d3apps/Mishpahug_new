<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_grad"
    tools:context=".fragments.EventInfoFragment">

    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_semibold"
        android:paddingLeft="15dp"
        android:text="Last name of the family"
        android:textColor="@color/mhLightColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eventInfoImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"

        android:background="@color/mhDarkColor"
        android:src="@mipmap/shabbat_event" />

    <View
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:backgroundTint="@color/bg_menu_color" />

    <TextView
        android:id="@+id/holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_title"
        android:fontFamily="@font/raleway_medium"
        android:paddingLeft="15dp"
        android:text="Shabbat"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/holiday"
        android:fontFamily="@font/raleway_medium"
        android:paddingLeft="15dp"
        android:text="22.05.90"
        android:textColor="@color/white" />

</android.support.constraint.ConstraintLayout>