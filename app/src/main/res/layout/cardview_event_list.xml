<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/transparent">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top">

        <ImageView
            android:id="@+id/familyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mhDarkColor"
            android:src="@mipmap/family"
            cardview:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/bg_menu_color"
            cardview:layout_constraintBottom_toBottomOf="@id/familyImage">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goldberg family"
                    android:textColor="@color/white"
                    android:fontFamily="@font/raleway_medium"/>
                <TextView
                    android:id="@+id/holiday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shabbat"
                    android:textColor="@color/white"
                    android:layout_below="@id/event_title"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/raleway_medium" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.05.90"
                    android:textColor="@color/white"
                    android:layout_below="@id/holiday"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/raleway_medium"/>

        </RelativeLayout>


</android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>
